# rml prefixes
@prefix rml: <http://semweb.mmlab.be/ns/rml#>.
@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix ql: <http://semweb.mmlab.be/ns/ql#>.
# other prefixes
@prefix ex: <http://example.org/>.
@prefix bf: <http://id.loc.gov/ontologies/bibframe/>.
@prefix rdaw: <http://rdaregistry.info/Elements/w/>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.

# kiegel for P10004

# genreForm*
# or
# genreForm >> GenreForm > rdfs:label

ex:WorkMap a rr:TriplesMap ;
	rml:logicalSource [
		rml:source "demodata_20211012.xml" ;
		rml:referenceFormulation ql:XPath ;
		rml:iterator "RDF/Description[@about='https://trellis.sinopia.io/repository/washington/003c0e59-9ab1-4fc2-8522-1a7b78601fef']"
	] ;

	rr:subjectMap [
		rml:reference "@about";
		rr:class bf:Work
	] ;

	# for IRIs

	rr:predicateObjectMap [
		rr:predicate bf:genreForm ;
		rr:objectMap [
			rml:reference "P10004/@resource" ;
			rr:termType rr:IRI
		]
	] ;

	# for literals

	rr:predicateObjectMap [
		rr:predicate bf:genreForm ;
		rr:objectMap [
			rr:parentTriplesMap ex:GenreMap ;
			rr:termType rr:BlankNode
		]
	] .

ex:GenreMap a rr:TriplesMap ;
	rml:logicalSource [
		rml:source "demodata_20211012.xml" ;
		rml:referenceFormulation ql:XPath ;
		rml:iterator "RDF/Description[P10004[not(@resource)]]" # writing the XPath like this ensures this blank node only generates if A) the property exists, and B) there is at least one instance where the value is not an IRI
	] ;

	rr:subjectMap [
		rr:termType rr:BlankNode ;
		rr:class bf:GenreForm
	] ;

	rr:predicateObjectMap [
		rr:predicate rdfs:label ;
		rr:objectMap [
			rml:reference "P10004[not(@resource)]" ;
			rr:termType rr:Literal # optional
		]
	] .
